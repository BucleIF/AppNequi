<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="376dp"
        android:layout_height="618dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="17dp" />

    <TextView
        android:id="@+id/emptyTextView"
        android:layout_width="368dp"
        android:layout_height="195dp"
        android:layout_alignStart="@+id/recyclerView"
        android:layout_alignTop="@+id/recyclerView"
        android:layout_alignEnd="@+id/recyclerView"
        android:layout_alignBottom="@+id/recyclerView"
        android:layout_marginStart="6dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="303dp"
        android:text="Sin Movimientos."
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnCloseHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="332dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="682dp"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@drawable/iconclose" />

</RelativeLayout>
